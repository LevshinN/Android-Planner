<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/event_info_title_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:padding="@dimen/abc_control_padding_material">

        <TextView
            android:id="@+id/event_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event title"
            android:textStyle="bold"
            android:textSize="@dimen/abc_text_size_headline_material" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:windowContentOverlay"
        android:padding="@dimen/abc_dialog_padding_material">

        <LinearLayout
            android:id="@+id/event_info_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_info_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="today, 2 august, 12.00"/>

            <TextView
                android:id="@+id/event_info_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Moscow"/>

            <TextView
                android:id="@+id/event_info_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Very important meeting"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>