<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/material_blue_grey_950">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="vertical">

        <TextView
            style="@style/WeekTableDayHeaderPort"
            android:text="ПН"/>

        <ListView
            android:id="@+id/week_table_day_1"
            style="@style/SmallEventListStylePort"/>

        <TextView
            style="@style/WeekTableDayHeaderPort"
            android:text="СР"/>

        <ListView
            android:id="@+id/week_table_day_3"
            style="@style/SmallEventListStylePort"/>

        <TextView
            style="@style/WeekTableDayHeaderPort"
            android:text="ПТ"/>

        <ListView
            android:id="@+id/week_table_day_5"
            style="@style/SmallEventListStylePort"/>

        <TextView
            style="@style/WeekTableDayHeaderPort"
            android:text="ВС"/>

        <ListView
            android:id="@+id/week_table_day_7"
            style="@style/SmallEventListStylePort"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="vertical">

        <TextView
            style="@style/WeekTableDayHeaderPort"
            android:text="ВТ"/>

        <ListView
            android:id="@+id/week_table_day_2"
            style="@style/SmallEventListStylePort"/>

        <TextView
            style="@style/WeekTableDayHeaderPort"
            android:text="ЧТ"/>

        <ListView
            android:id="@+id/week_table_day_4"
            style="@style/SmallEventListStylePort"/>

        <TextView
            style="@style/WeekTableDayHeaderPort"
            android:text="СБ"/>

        <ListView
            android:id="@+id/week_table_day_6"
            style="@style/SmallEventListStylePort"/>

        <TextView
            style="@style/WeekTableDayHeaderPort"
            android:text="КАЛЕНДАРЬ"/>

        <CalendarView
            style="@style/WeekModeCellStyle"
            android:id="@+id/navigation_calendar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:selectedWeekBackgroundColor="@color/yellow"
            android:weekNumberColor="@color/dark_yellow"
            android:shownWeekCount="4"
            android:padding="1dp"/>

    </LinearLayout>

</LinearLayout>
