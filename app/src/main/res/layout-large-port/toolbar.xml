<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_actionbar"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/yellow"
    app:theme="@style/Theme.AppCompat.Light.DarkActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:id="@+id/btn_current_date">

            <TextView
                android:id="@+id/txt_current_date"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="CERRENT DATE"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:paddingBottom="8dp"
                android:background="@drawable/spinner_backgroung"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="16dp"
            android:paddingLeft="16dp">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:id="@+id/btn_day_mode">

            <TextView
                style="@style/ButtonToolbarTheme"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/mode_day" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_week_mode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="16dp"
            android:paddingLeft="16dp">

            <TextView
                style="@style/ButtonToolbarTheme"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/mode_week" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:id="@+id/btn_month_mode">

            <TextView
                style="@style/ButtonToolbarTheme"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/mode_month" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/ic_add_black_24dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_today"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/ic_today_black_24dp"/>
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.Toolbar>